<?xml version="1.0" encoding="UTF-8"?>
<server description="Liberty from scratch">
    <featureManager>
        <feature>servlet-6.0</feature>
    </featureManager>

    <variable name="http.port" defaultValue="9080"/>
    <variable name="https.port" defaultValue="9443"/>
    <variable name="app.context.root" defaultValue="ServletSample"/>

    <httpEndpoint httpPort="${http.port}" httpsPort="${https.port}" id="defaultHttpEndpoint"  host="*" />

    <webApplication id="${app.context.root}" contextRoot="${app.context.root}" location="${app.context.root}.war" />
</server>