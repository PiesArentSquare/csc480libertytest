<?xml version="1.0" encoding="UTF-8"?>
<server description="Backend service">
    <featureManager>
        <feature>jakartaee-10.0</feature>
        <feature>microProfile-6.1</feature>
    </featureManager>

    <variable name="http.port" defaultValue="8080"/>
    <variable name="https.port" defaultValue="8443"/>
    <variable name="context.root" defaultValue="backend"/>

    <httpEndpoint httpPort="${http.port}" httpsPort="${https.port}"
                  id="defaultHttpEndpoint" />

    <webApplication contextRoot="/api" location="${context.root}.war" />

    <cors domain="/api/tasks" allowedOrigins="https://localhost:9091" allowCredentials="true" allowedMethods="GET" exposeHeaders="MyHeader"/>
</server>